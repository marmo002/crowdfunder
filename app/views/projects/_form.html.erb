<%= form_for(@project, html: {multipart: true}) do |f| %>

  <% @project.errors.full_messages.each do |error| %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      <%= error %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, nil, class: "hidden" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Project title" %>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: "hidden" %>
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>

    <div class="form-group">
    <%= f.label :goal, nil, class: "hidden" %>
    <%= f.number_field :goal, class: "form-control", placeholder: "Project goal" %>
  </div>

  <div class="form-group">
    <%= f.label :image, nil, class: "hidden" %>
    <%= f.text_field :image, class: "form-control", placeholder: "Add image url" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, nil, class: "hidden" %>
    <%= f.date_field :start_date, class: "form-control", placeholder: "Start date" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, nil, class: "hidden" %>
    <%= f.date_field :end_date, class: "form-control", placeholder: "End date" %>
  </div>

  <%= f.submit "Create Project", class: "btn btn-primary btn-lg btn-block", role: "button" %>

<% end %>
