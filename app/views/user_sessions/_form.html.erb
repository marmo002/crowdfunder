
<%= form_tag user_sessions_path, :method => :post do %>
<div class="form-group">
  <%= label_tag :email, nil, class: "hidden"%>
  <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "E-mail" %>
</div>
<div class="form-group">
  <%= label_tag :password, nil,  class: "hidden" %>
  <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password"%>
</div>
<%= submit_tag "Log in", class: "btn btn-primary btn-lg btn-block", role: "button" %>
<% end %>
